<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ibutton" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_rfidcardinfo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Cardinfo..."
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="2.75"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_readRfid"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:text="Read" />

            <TextView
                android:id="@+id/textView_Block"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Block:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_block"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="32"
                android:textSize="20sp" >
            </EditText>

            <Button
                android:id="@+id/button_Clear"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:text="Clear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_Write"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:text="Wirte" />

            <TextView
                android:id="@+id/textView_content"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Content:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_InitWallet"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:text="InitWallet" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="MONEY:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_Money"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="1"
                android:textSize="20sp" >
            </EditText>

            <Button
                android:id="@+id/buttonRechargeWallet"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:text="RechargeWallet" />

            <Button
                android:id="@+id/buttonreadWallet"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:text="ReadWallet" />

            <Button
                android:id="@+id/buttonDeduct"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:text="DeductMoney" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Button01"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:onClick="cpucardTest"
                android:text="cpu card test" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="220dp"
                android:layout_height="62dp"
                android:onClick="BeijingYkt"
                android:text="北京市政一卡通读卡" />

            <TextView
                android:id="@+id/tvwBeijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/spinner_Serport"
                android:layout_width="160dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:entries="@array/device" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp" >

            <TextView
                android:id="@+id/textView_keyvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyvalue:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_keyvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ff ff ff ff ff ff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/textView_PwdFlags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PwdFlags:"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_pwdflags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/PwdFlag" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_setting"
            android:layout_width="160dp"
            android:layout_height="62dp"
            android:text="Setting" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.98" >
        </LinearLayout>

        <Button
            android:id="@+id/button_back"
            android:layout_width="160dp"
            android:layout_height="62dp"
            android:text="Back" />
    </LinearLayout>

</LinearLayout>